{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "🛢️ Start Database - Docker",
            "type": "shell",
            "command": "docker-compose up -d db",
            "options": {
                "cwd": "${workspaceFolder}/Backend"
            },
            "problemMatcher": []
        },
        {
            "label": "⚙️ Start Backend - Watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/Backend/Backend.csproj"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": [
                "🐳 Start Database - Docker Compose"
            ]
        },
        {
            "label": "💻 Start Frontend - Dev",
            "type": "npm",
            "script": "dev",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/Frontend"
            },
        },
        {
            "label": "🚀 Run All",
            "dependsOn": [
                "🐳 Start Database - Docker",
                "⚙️ Start Backend - Watch",
                "💻 Start Frontend - Dev"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "⏹️ Stop All",
            "type": "shell",
            "command": "docker-compose down",
            "options": {
                "cwd": "${workspaceFolder}/Backend"
            },
            "problemMatcher": []
        },
        {
            "label": "🔄 Restart All",
            "dependsOn": [
                "🐳 Stop All - Docker",
                "🚀 Run All"
            ],
            "group": "build",
            "problemMatcher": []
        }
    ]
}