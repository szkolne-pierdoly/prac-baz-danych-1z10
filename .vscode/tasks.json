{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "🛢️ Start Database - Docker",
            "type": "shell",
            "command": "docker-compose up -d db",
            "options": {
                "cwd": "${workspaceFolder}/Backend"
            },
            "problemMatcher": []
        },
        {
            "label": "⚙️ Backend Watch",
            "type": "shell",
            "command": "dotnet",
            "args": ["watch", "run", "--project", "${workspaceFolder}/Backend/Backend.csproj"],
            "problemMatcher": "$msCompile",
            "isBackground": true
        },
        {
            "label": "💻 Start Frontend - Dev",
            "type": "npm",
            "script": "dev",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/Frontend"
            },
        },
        {
            "label": "🚀 Run All",
            "dependsOn": [
                "🛢️ Start Database - Docker",
                "⚙️ Backend Watch",
                "💻 Start Frontend - Dev"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "🔄 Restart All",
            "dependsOn": [
                "🐳 Stop All - Docker",
                "🚀 Run All"
            ],
            "group": "build",
            "problemMatcher": []
        }
    ]
}